{
  "name": "mcp-minion",
  "version": "0.2.3",
  "description": "Minimal MCP client that follows the official protocol spec exactly",
  "type": "module",
  "main": "dist/oo.js",
  "bin": {
    "oo": "dist/oo.js"
  },
  "files": [
    "dist",
    "docs/mcp",
    "README.md",
    "mcp-config.json"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "start": "node dist/oo.js",
    "test": "exit 0",
    "tcr": "./tcr.sh",
    "pretty": "prettier --write ."
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "client",
    "ai",
    "tool"
  ],
  "author": "limadelic",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "@modelcontextprotocol/server-filesystem": "latest",
    "js-yaml": "^4.1.0",
    "mongodb-mcp-server": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
